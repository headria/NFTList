<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_bar_color"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/auth_input_root"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_search_view_edt_height"
            android:background="@drawable/custom_search_view_bg_drawable"
            android:layout_marginStart="@dimen/custom_search_view_edt_padding_start"
            android:layoutDirection="ltr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolbar_iv_back"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/auth_input_edt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/sans_regular"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/custom_search_view_edt_padding_start"
                android:paddingEnd="@dimen/custom_search_view_edt_padding_start"
                android:textAlignment="viewStart"
                android:textColor="@color/custom_search_view_edt_text_color"
                android:textColorHint="@color/custom_search_view_edt_text_color"
                android:textSize="@dimen/custom_search_view_edt_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/search_nft_hint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/toolbar_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_search_view_bg_drawable"
            android:clickable="true"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>