<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/auth_input_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_search_view_edt_height"
            android:animateLayoutChanges="false"
            android:background="@drawable/custom_search_view_bg_drawable"
            android:layoutDirection="ltr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/auth_input_edt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/sans_regular"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/custom_search_view_edt_padding_start"
                android:paddingEnd="@dimen/custom_search_view_edt_padding_start"
                android:textColor="@color/custom_search_view_edt_text_color"
                android:textColorHint="@color/custom_search_view_edt_text_color"
                android:textSize="@dimen/custom_search_view_edt_text_size_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="viewStart"
                tools:hint="Search NFT" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>